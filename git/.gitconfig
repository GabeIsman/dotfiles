[user]
  name = Gabe Isman
  email = gabe.isman@gmail.com
[color]
  ui = true
[merge]
  renamelimit = 2000
[push]
  autoSetupRemote = true
  default = current
[alias]
  co = checkout
  oc = checkout
  ci = commit
  ic = commit
  me = merge --no-edit
  br = branch
  hist = log --graph --max-count=20 --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %C(cyan)<%an>%Creset' --abbrev-commit --date=relative
  recent = for-each-ref --count=20 --sort=-committerdate --format='%(committerdate:relative)\t%(refname:short)\t\t%(contents:subject)' refs/heads/
  praise = blame
  st = status
  unstage = reset HEAD
  deploy = subtree push
  ctags = !.git/hooks/ctags
  undo = reset --soft HEAD^
[core]
  excludesfile = ~/.gitignore
[init]
  templatedir = ~/.git_template
  defaultBranch = main
[diff]
  algorithm = patience
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[branch]
  sort = -committerdate
